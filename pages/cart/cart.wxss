/* pages/itemDetail/itemDetail.wxss */

.detail-swiper .img{
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}

.cart-item-img{
  width: 28vw;
  height: 28vw;
  display: inline-block;
}

.cart-view{
  margin: 10px 5px 0 5px;
  padding: 5px 0;
}

.cart-view .checkbox-view{
  margin-top:10vw;
  text-align: center;
}

.cart-view .img-view{
  text-align: center;
}
.cart-view .content{
  text-align: left;
}
.price-view{
  height: 1.2rem;
  line-height: 1.2rem;
}
.price-view .icon{
  line-height: 1.2rem;
}
.count-view{
  height: 1.5rem;
  margin-left: 1.5rem;

}
.count-view .operate-view{
  width: 1.5rem;
  height: 1.5rem;
  font-size: 10px;
  text-align: center;
  line-height: 1.5rem;
  display: inline-block;
  border: .5px solid #BBBBBB;
  border-width: 100;
  font-weight: 400;
}
.count-view .plus{
  border-radius: 5px 0 0 5px;
  border-right: 0;
}
.count-view .deduct{
  border-radius: 0 5px 5px 0;
  border-left: 0;
}
.count-view .count{
  width: 2rem;
  height: 1.5rem;
  min-height: 1.5rem;
  float: left;
  line-height: 1.5rem;
  border: .5px solid #BBBBBB;
  text-align: center;
  font-size: .6rem;
}
