.ordertype .img{
  width: 6vw;
  height: 6vw;
}

.vip-card{
  background-color: goldenrod;
  border-radius: 5px;
}

.vip-card .title{
  padding: .5rem 1rem;
  font-style: italic;
  border-bottom: .5px solid white;
}

.vip-card .wx-info{
  height: 11vw;
  margin-top: 5px;
margin-bottom: 5px;
}
.wx-info image{
  width: 10vw;
  height: 10vw;
  border-radius: 50%;
}
.wx-info .name{
  line-height: 10vw;
}

.vip-card .userid{
  height: 2rem;
  line-height: 2rem;
}