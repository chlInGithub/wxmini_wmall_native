@import "/font-awesome/font-awesome.wxss";

.right-view {
  position: fixed;
  top: 50vh;
  left: 85vw;
  background-color: rgba(0, 0, 0, 0);
  width: 10vw;
  height: auto;
  z-index: 10000;
  text-align: center;
}

.right-view .ele {
  width: 40px;
  margin: 0.8rem 0;
  height: 40px;
  border-radius: 40px;
  border: 2px solid white;
  background-color: white;
}

.right-view .ele .icon {
  font-size: 25px;
  color: #bbb;
  margin: 6.5px 0;
}
